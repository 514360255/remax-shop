.g-message {
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  top: 0;
  z-index: 999999;
  transition: all 0.5s;
  opacity: 0; }
  .g-message .g-message-content {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    background-color: rgba(0, 0, 0, 0.7);
    padding: 32rpx;
    border-radius: 16rpx;
    max-width: 70%;
    min-width: 176rpx;
    text-align: center; }
  .g-message .g-icon {
    font-size: 40rpx; }
  .g-message .g-text {
    font-size: 32rpx;
    color: #fff; }

.g-message-fade-in {
  opacity: 1; }

.g-message-fade-out {
  opacity: 0; }

